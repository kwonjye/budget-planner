<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jye.budget.user.mapper.UserMapper">
    <select id="findByEmail" resultType="jye.budget.user.entity.User">
        SELECT user_id,
               email,
               password,
               verified,
               created_at,
               updated_at
        FROM user
        WHERE email = #{email}
    </select>
</mapper>