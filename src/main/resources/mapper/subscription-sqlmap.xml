<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jye.budget.mapper.SubscriptionMapper">
    <sql id="subscription">
        SELECT subscription_id,
               user_id,
               subscription_name,
               subscription_type,
               subscription_date,
               subscription_cost,
               created_at,
               updated_at
        FROM subscription
    </sql>
    <select id="findByTypeAndUserId" resultType="jye.budget.entity.Subscription">
        <include refid="subscription"/>
        WHERE user_id = #{userId}
            AND subscription_type = #{subscriptionType}
        ORDER BY subscription_date
    </select>
    <select id="findById" resultType="jye.budget.entity.Subscription">
        <include refid="subscription"/>
        WHERE subscription_id = #{subscriptionId}
    </select>
    <delete id="delete">
        DELETE FROM subscription
        WHERE subscription_id = #{subscriptionId}
    </delete>
</mapper>